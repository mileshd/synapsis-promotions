/* ==|== imports =========================== */
@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Redressed')
@import url('http://fonts.googleapis.com/css?family=Belgrano')

//Nib provides a CSS reset
global-reset()

// Assorted variables.
link_color= #5d87d6
link_hover_color = #000000
menu_link_color = #677a83
body_font_family = 'Redressed', cursive;

// Convenience classes and mixins.
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

// background_image(arguments)
//   linear-gradient (arguments)
//   -o-linear-gradient (arguments)
//   -moz-linear-gradient (arguments)
//   -webkit-linear-gradient (arguments)
//   -ms-linear-gradient (arguments)

// Styles
body
  font-family body_font_family
  font-size 18px
  background-color blue
  background-image: linear-gradient(bottom, rgb(93,135,214) 0%, rgb(255,255,255) 50%, rgb(93,135,214) 100%);
  background-image: -o-linear-gradient(bottom, rgb(93,135,214) 0%, rgb(255,255,255) 50%, rgb(93,135,214) 100%);
  background-image: -moz-linear-gradient(bottom, rgb(93,135,214) 0%, rgb(255,255,255) 50%, rgb(93,135,214) 100%);   
  background-image: -webkit-linear-gradient(bottom, rgb(93,135,214) 0%, rgb(255,255,255) 50%, rgb(93,135,214) 100%);
  background-image: -ms-linear-gradient(bottom, rgb(93,135,214) 0%, rgb(255,255,255) 50%, rgb(93,135,214) 100%);
  background-image -webkit-gradient( 
    linear,
    left bottom,
    left top,
    color-stop(0, rgb(93,135,214)),
    color-stop(0.5, rgb(255,255,255)),
    color-stop(1, rgb(93,135,214))
  )

h1
  font-size 30px
  color #5d87d6
  font-family body_font_family
  padding-bottom 10px

h2
  font-size 24px
  color #999999
  font-family body_font_family

h3
  font-size 30px
  color #677a83
  font-family body_font_family

a
  text-decoration underline
  &:link
  &:visited
  &:active
  &:focus
    color link_color
  &:hover
    color link_hover_color

p
  line-height 140%
  padding-bottom 25px

.wrapper
  width 860px
  margin 50px auto
  background #ffffff
  box-shadow 0 0 10px rgba(0, 0, 0, 0.2)
  padding 40px
  border-radius 10px

header
  // padding 50px 50px 0px 50px
  width 425px
  .logo
    float left
    display inline
    background url(../images/synapsis-ads-logo-template.gif) no-repeat
    width 115px
    height 135px
    padding 0 10px
    h1
      font-size 24px
      margin 5px 0 0 80px
      line-height 125%
      span
        color #000000
        margin-bottom 10px
      
nav
  float right
  padding 40px 0 0 0

ul#navlist
  margin -25px 0 0 0
  padding-left 0
  white-space nowrap
  text-align right
  li
    display inline
    list-style-type none
    a
      img
        padding-left 10px
        margin 0px 0px 0 0


#movie.widget
  float left
  width 425px
  margin 0
  h1
    font-family body_font_family
    margin 13px 10px 4px
    padding-bottom 10px
    border-bottom 1px dotted #ddd
    margin-bottom 10px
  p
    font-size 20px
    text-align left

.sectionFooter
  background #d6d9da
  padding 20px 0
  margin 0 20px
  border-top 1px solid #ffffff
  border-radius 10px

.footerBox
  width 40%
  float left
  padding 0 40px
  p
    font-style italic
    padding 0 0 10px 0

      
input
select
  border 1px solid #555
  padding 0.5em
  margin 5px 0 25px 0
  font-size 15px
  line-height 1.2em
  width 80%
  background #fff
  background: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#ccc));
  -webkit-appearance: none;
  -webkit-box-shadow: 1px 1px 1px #fff;
  -webkit-border-radius: 0.5em;

label
  padding 20px 0

input#next
input#submit
  width 25%

fieldset
  width 350px
  float right
  border-radius 10px
  margin -100px 0 0 0
  padding 20px 20px 10px 20px
  border 1px solid black

footer
  text-align center
  padding-bottom 40px
  color #000000

/* ==|== helper classes ====================================================== */

.clearfloat
  clear both
  height 0
  font-size 1px
  line-height 0

.red
  color red

.horSeparator
  background url(../images/horSeparator.png) repeat-x;
  height 13px
  margin 20px 0