.clearfloat
  clear both
  height 0
  font-size 1px
  line-height 0

.red
  color red

.horSeparator
  background url(../images/horSeparator.png) repeat-x;
  height 13px
  margin 20px 0

.bold
  font Arial
  font-weight bold