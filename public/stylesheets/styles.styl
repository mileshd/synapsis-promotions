/* ==|== imports =========================== */
@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Redressed')
@import url('http://fonts.googleapis.com/css?family=Belgrano')

//Nib provides a CSS reset
global-reset()

// Assorted variables.
link_color= #5d87d6
link_hover_color = #000000
menu_link_color = #677a83
header_font_family = 'Redressed', cursive
body_font_family = 'Gill Sans', 'Trebuchet MS', Calibri, sans-serif

// Convenience classes and mixins.
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

// Styles
body
  font-family body_font_family
  font-size 20px
  background-color blue
  background-image: linear-gradient(bottom, rgb(93,135,214) 0%, rgb(255,255,255) 50%, rgb(93,135,214) 100%);
  background-image: -o-linear-gradient(bottom, rgb(93,135,214) 0%, rgb(255,255,255) 50%, rgb(93,135,214) 100%);
  background-image: -moz-linear-gradient(bottom, rgb(93,135,214) 0%, rgb(255,255,255) 50%, rgb(93,135,214) 100%);   
  background-image: -webkit-linear-gradient(bottom, rgb(93,135,214) 0%, rgb(255,255,255) 50%, rgb(93,135,214) 100%);
  background-image: -ms-linear-gradient(bottom, rgb(93,135,214) 0%, rgb(255,255,255) 50%, rgb(93,135,214) 100%);
  background-image -webkit-gradient( 
    linear,
    left bottom,
    left top,
    color-stop(0, rgb(93,135,214)),
    color-stop(0.5, rgb(255,255,255)),
    color-stop(1, rgb(93,135,214))
  )

h1
  font-size 30px
  color #5d87d6
  font-family body_font_family
  padding-bottom 10px

h2
  font-size 24px
  color #999999
  font-family body_font_family

h3
  font-size 30px
  color #677a83
  font-family body_font_family

a
  text-decoration underline
  &:link
  &:visited
  &:active
  &:focus
    color link_color
  &:hover
    color link_hover_color

p
  line-height 140%
  padding-bottom 25px

.wrapper
  width 860px
  margin 50px auto
  background #ffffff
  box-shadow 0 0 10px rgba(0, 0, 0, 0.2)
  padding 40px
  border-radius 10px

header
  float left
  width 425px
  .logo
    float left
    display inline
    background url(../images/synapsis-ads-logo-template.gif) no-repeat
    width 115px
    height 135px
    padding 0 10px
    h1
      font-family header_font_family
      font-size 40px
      margin 12px 0 0 80px
      line-height 100%
      span
        color #000000
        margin-bottom 10px
  #facebook
    float right
    margin 10px 10px 0 0
    a
      img
        height 90px
        width 90px

ul#navlist
  display block
  text-align center
  background-color #C0CCE6
  width 250px
  margin 0 auto
  border-radius 0 0 5px 5px
  li 
    display inline-block
    padding 5px 10px
    a
      text-decoration none
      color black
      &:hover
        color white

ul#nav
  list-style-type none
  display block
  background: #feffff; /* Old browsers */
  background: -moz-linear-gradient(top, #feffff 0%, #5d87d6 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#feffff), color-stop(100%,#5d87d6)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top, #feffff 0%,#5d87d6 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top, #feffff 0%,#5d87d6 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top, #feffff 0%,#5d87d6 100%); /* IE10+ */
  width 940px
  height 30px
  margin -30px 0 20px -40px
  text-align center
  border-radius 0 0 7px 7px
  li
    display inline-block
    margin-top -15px
    // border 1px solid black
    padding 0 15px
    a
      color black
      font-family gill sans, serif
      font-size 21px
      text-decoration none
    a:hover
        color #5d87d6

ul#works
  list-style-type decimal
  margin 10px
  font-size 20px
  li
    margin 10px 0 25px 30px

ul.company
  list-style-type disc
  margin 10px
  font-size 20px
  li
    margin 10px 0 25px 30px

ul.faq
  list-style-type none
  margin 10px
  font-size 20px
  li
    margin 10px 0 25px 30px

#movie.widget
  float left
  width 425px
  h1
    font-family body_font_family
    margin 13px 10px 4px 0px
    padding-bottom 10px
    margin-bottom 10px
  p
    font-size 20px
    text-align left

.sectionFooter
  background #d6d9da
  padding 20px 0
  margin 0 20px
  border-top 1px solid #ffffff
  border-radius 10px

.footerBox
  width 40%
  float left
  padding 0 40px
  p
    font-style italic
    padding 0 0 10px 0

input
select
  border 1px solid #555
  padding 0.5em
  margin 5px 0 20px 0
  font-size 15px
  line-height 1.2em
  width 80%
  background #fff
  background: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#ccc));
  -webkit-appearance: none;
  -webkit-box-shadow: 1px 1px 1px #fff;
  -webkit-border-radius: 0.5em;

select.class-year
select.region
  width 50%

div.select
  width 150px
  height 50px
  float left
  margin 0 10px


label
  padding 20px 0

input#next
input#submit
input#back
  width 25%
  margin-right 10px

fieldset
  width 350px
  float right
  border-radius 10px
  margin -135px 0px 0px 0
  padding 20px 20px 10px 20px
  border 1px solid black

footer
  text-align center
  margin-top -10px
  padding-bottom 40px
  color #000000

